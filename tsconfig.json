{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "sourceMap": true,
    "rootDirs": ["./src"],
    "jsx": "react-jsx",
    "lib": ["dom", "es2022"],
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
  }
}
